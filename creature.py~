# Placeholder values! feel free to change

class Water:
	def __init__(self):
		self.health = 100
		self.currentHealth = 100
		self.MP = 100
		self.Attack = 1
		self.Defense = 2
		self.image = None
		self.move = 1
		self.state = "normal"	#"normal", "frozen", or "drain"
		return

class Fire:
	def __init__(self):
		self.health = 100
		self.currentHealth = 100
		self.MP = 100
		self.Attack = 1.5
		self.Defense = 1
		self.image = None
		self.move = 2
		self.state = "normal"
		return

